{
  "extends": "./tsconfig.base.json",
  "include": [
    "types.d.ts",
    "packages/web-*/src/**/*"
  ],
  "exclude": [
    "**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.web.tsbuildinfo",
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "types": [
      "vite/client"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  }
}